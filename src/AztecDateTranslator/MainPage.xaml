<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AztecDateTranslator.MainPage">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                Text="Pick a Gregorian Date:"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Date:" 
                       Style="{StaticResource SubHeadline}"
                       VerticalOptions="Center" />
                <DatePicker VerticalOptions="Center" />
                <Button
                    Text="Convert" 
                    SemanticProperties.Hint="Convert Date"
                    HorizontalOptions="Fill" />
            </HorizontalStackLayout>

            <Label Text="Tonalpohualli: 12 Ozomatli" 
                   Style="{StaticResource Headline}" />
            <Image
                Source="d11.png"
                HeightRequest="192"
                Aspect="AspectFit"
                SemanticProperties.Description="Day Sign" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
